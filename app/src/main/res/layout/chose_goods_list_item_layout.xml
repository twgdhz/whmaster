<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/goods_box1"
    android:id="@+id/content_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:button="@drawable/bg_selector_style3" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="left"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/back"
            android:maxLines="2"
            android:enabled="true"
            android:textSize="15sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layerType="software"
        android:background="@drawable/dash_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="3"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="SKU"
            android:textColor="@color/color26"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_sku_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/back"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="批次号"
            android:textColor="@color/color26"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_no_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/back"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_ke_move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="可移库数量"
            android:textColor="@color/color26"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_ke_move_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/back"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_guige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="规格"
            android:textColor="@color/color26"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_guige_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/back"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_he_ji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="合计"
            android:textColor="@color/color26"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_he_ji_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/back"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
