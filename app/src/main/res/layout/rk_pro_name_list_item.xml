<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/content_layout"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3.5"
            android:scaleType="fitStart"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon01"/>
        <TextView
            android:id="@+id/order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/back"
            android:text="货品名称：52°泸州老窖特区白酒"
            android:singleLine="true"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="3.5"
            android:scaleType="fitEnd"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/right_gray"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color18"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/back"
            android:textSize="15sp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="货主：四川祥瑞星贸有限公司"/>
        <Button
            android:id="@+id/item_state"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="5"
            android:background="@mipmap/bg_red"
            android:textColor="@color/white"
            android:text="未执行"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color18"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/already_packge_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="待入库整数：565件"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/no_packge_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="已入库整数：45件"
                android:textSize="13sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color18"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/already_num_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="待入库零散数：24件"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/no_num_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="已入库零散数：4件"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/color2"/>
</LinearLayout>
