<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/goods_box1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:enabled="true"
            android:gravity="left"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/back"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dash_line"
        android:layerType="software" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/product_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/white"
            android:ellipsize="end"
            android:paddingBottom="10dp"

            android:singleLine="true"
            android:text="SKU"
            android:textColor="@color/color26"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_sku_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="456456456"
            android:textColor="@color/back"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/product_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/white"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="批次号"
            android:textColor="@color/color26"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_no_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="2010151548455"
            android:textColor="@color/back"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/product_ke_move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="当前库位数量"
            android:textColor="@color/color26"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_ke_move_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="456456456"
            android:textColor="@color/back"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/product_guige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="规格"
            android:textColor="@color/color26"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_guige_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="5瓶/件"
            android:textColor="@color/back"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dash_line"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_trolley" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="移库至"
            android:textColor="@color/color26"
            android:textSize="14sp" />

        <com.whmaster.tl.whmaster.widget.MyEditText
            android:id="@+id/base_zs_edit"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_my_style24"
            android:gravity="center"
            android:hint="0"
            android:maxLength="6"
            android:inputType="numberDecimal"
            android:textColor="@color/back"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/base_zs_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.6"
            android:gravity="right"
            android:textColor="@color/back"
            android:textSize="14sp" />

        <com.whmaster.tl.whmaster.widget.MyEditText
            android:id="@+id/base_unit_edit"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_my_style24"
            android:gravity="center"
            android:hint="0"
            android:maxLength="6"
            android:inputType="numberDecimal"
            android:textColor="@color/back"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/base_unit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.6"
            android:gravity="right"
            android:textColor="@color/back"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/product_he_ji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="合计"
            android:textColor="@color/color26"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_he_ji_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="54512瓶"
            android:textColor="@color/back"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
