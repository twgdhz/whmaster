<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_back_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title" />
    <LinearLayout
        android:id="@+id/chose_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/re_blackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/back_image"
                android:layout_width="120dp"
                android:layout_height="28dp"
                android:src="@mipmap/left_white"
                android:scaleType="fitStart"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
            <TextView
                android:id="@+id/title_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="移出库位"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_my_style19">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/kuqu_edit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:background="@drawable/bg_my_style20"
                    android:hint="请输入库区"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/back"/>
                <EditText
                    android:id="@+id/kuwei_edit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:background="@drawable/bg_my_style20"
                    android:hint="请输入点位"/>
            </LinearLayout>

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/x_revyvler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/position_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:background="@drawable/bg_my_style27"
                    android:paddingLeft="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:minWidth="100dp"
                    android:layout_marginRight="100dp"
                    android:textColor="@color/title_back_color"
                    android:text=""/>

                <TextView
                    android:id="@+id/confirm_text"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/btn_determine"
                    android:text="确定"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请按SCAN键 扫描库位码"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/title_back_color"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/re_illustrator"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
